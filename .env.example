# Supabase (Required)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Supabase service role key (Required for server-side API routes)
# Never expose this key client-side.
SUPABASE_SERVICE_ROLE_KEY=

# Username to email domain mapping for CloudAuth + user creation
# Example: meys.gov.ph
USERNAME_EMAIL_DOMAIN=mums.local

# Optional: set to make a specific Supabase Auth email bootstrap as SUPER_ADMIN
# SUPERADMIN_EMAIL=someone@mums.local
SUPERADMIN_EMAIL=

# Optional: Realtime toggles
SYNC_ENABLE_SUPABASE_REALTIME=true
SYNC_RECONCILE_MS=15000
SYNC_CONNECT_TIMEOUT_MS=7000

# Presence
PRESENCE_POLL_MS=3000
PRESENCE_TTL_SECONDS=25

# Storage (Profile photos)
# Bucket should be PUBLIC. Default is "public".
SUPABASE_PUBLIC_BUCKET=public


# ------------------------------------------------------------
# E2E Tests (Playwright)
# ------------------------------------------------------------
# These are ONLY used by CI/local Playwright tests. Store real values
# as GitHub Secrets in CI (never commit credentials).

# Deployed base URLs
CLOUDFLARE_URL=
VERCEL_URL=

# Optional: assert Supabase project refs match expected environment
EXPECTED_PROD_REF=
EXPECTED_UAT_REF=

# Test users
PROD_USER_EMAIL=
PROD_USER_PASSWORD=
UAT_USER_EMAIL=
UAT_USER_PASSWORD=
